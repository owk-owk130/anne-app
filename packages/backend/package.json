    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "@types/express": "^5.0.3",
    "typescript": "^5.8.3"
  }
